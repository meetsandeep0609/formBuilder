{
  "name": "formBuilder",
  "version": "1.24.2",
  "main": "dist/form-builder.js",
  "files": [
    "dist/form-builder.js",
    "dist/form-builder.min.js",
    "dist/form-builder.css",
    "dist/form-builder.min.css",
    "dist/form-render.css",
    "dist/form-render.js",
    "dist/form-render.min.css",
    "dist/form-render.min.js"
  ],
  "homepage": "https://formbuilder.online/",
  "repository": {
    "url": "http://github.com/kevinchappell/formBuilder",
    "type": "git"
  },
  "author": "Kevin Chappell <kevin.b.chappell@gmail.com>",
  "contributors": [],
  "bugs": "https://github.com/kevinchappell/formBuilder/issues",
  "description": "A jQuery plugin for drag and drop form building",
  "keywords": [
    "jquery-plugin",
    "forms",
    "drag and drop",
    "form builder",
    "form create"
  ],
  "license": "MIT",
  "ignore": [
    "**/*",
    "node_modules",
    "test"
  ],
  "config": {
    "files": {
      "test": [
        "test/**/*.spec.js"
      ],
      "formBuilder": {
        "js": "src/js/form-builder.js",
        "fonts": "src/fonts/fontello",
        "sass": [
          "src/sass/form-builder.scss"
        ]
      },
      "formRender": {
        "js": "src/js/form-render.js",
        "sass": [
          "src/sass/form-render.scss"
        ]
      },
      "site": [
        "demo/assets/sass/site.scss"
      ],
      "demo": {
        "vendor": {
          "js": [
            "bower_components/jquery/dist/jquery.js",
            "bower_components/jquery-ui/jquery-ui.js",
            "bower_components/jquery-ui/ui/widgets/sortable.js"
          ]
        }
      }
    },
    "fontServer": "http://fontello.com"
  },
  "browserify": {
    "transform": [
      ["babelify", {
      "presets": ["es2015","node6", "stage-3"],
      "plugins": [
        "transform-object-rest-spread",
        "transform-es2015-destructuring",
        "syntax-object-rest-spread"
        ]
      }]
    ]
  },
  "babel": {
    "presets": [
      "node6",
      "stage-3"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-es2015-destructuring",
      "syntax-object-rest-spread"
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ]
      }
    }
  },
  "scripts": {
    "prestart": "npm update",
    "test": "gulp test",
    "start": "gulp",
    "deploy": "gulp deploy",
    "release:patch": "git co master && git up && gulp tag patch && gulp deploy",
    "release:minor": "git co master && git up && gulp tag minor && gulp deploy",
    "build": "gulp build"
  },
  "dependencies": {
    "mi18n": "^0.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.0.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-es2015-destructuring": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.16.3",
    "babelify": "^7.3.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.1.1",
    "eslint": "^3.9.1",
    "eslint-config-google": "^0.7.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-base64": "^0.1.3",
    "gulp-bump": "^2.5.0",
    "gulp-concat": "^2.6.0",
    "gulp-cssmin": "^0.1.7",
    "gulp-eslint": "^3.0.1",
    "gulp-header": "^1.7.1",
    "gulp-load-plugins": "^1.4.0",
    "gulp-plumber": "^1.1.0",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^2.2.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^2.0.0",
    "opener": "^1.4.2",
    "semver": "^5.3.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "globals": {
      "jQuery": true,
      "$": true
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "quote-props": 0,
      "no-unused-vars": 1,
      "no-console": 0,
      "new-cap": 0,
      "strict": 0,
      "arrow-parens": 0,
      "no-underscore-dangle": 0,
      "comma-dangle": 0,
      "no-use-before-define": 0,
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "engines": {}
}
